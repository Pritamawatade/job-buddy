{
  "root": true,
  "env": { "es2021": true, "node": true },
  "overrides": [
    {
      "files": ["*.ts", "*.tsx"],
      "parser": "@typescript-eslint/parser",
      "parserOptions": { "ecmaVersion": 2021, "sourceType": "module" },
      "plugins": ["@typescript-eslint"],
      "extends": ["eslint:recommended", "plugin:@typescript-eslint/recommended"],
      "rules": {
        "no-console": "warn",
        "eqeqeq": "error",
        "no-var": "error",
        "prefer-const": "error"
      }
    }
  ]
}